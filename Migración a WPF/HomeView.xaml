<UserControl x:Class="HomeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Migración_a_WPF"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             Background="#200F53">

    <Border CornerRadius="10" Background="#200F53" BorderBrush="#6D2FFF" BorderThickness="1" Margin="20">
        <Grid>
            <!-- Área para ingresar la pregunta -->

            <StackPanel VerticalAlignment="Top" Margin="10">
                <TextBlock Text="Ingrese su pregunta:" 
                           FontSize="16" 
                           Margin="0,0,0,10"
                           Foreground="White"/>
                <TextBox x:Name="txtPregunta" 
                         Height="100" 
                         Width="600" 
                         FontSize="14" 
                         TextWrapping="Wrap"
                         AcceptsReturn="True"/>
                <Button x:Name="btnEnviar" 
                        Content="Enviar" 
                        Width="200" 
                        Height="50" 
                        Margin="0,10,0,0"
                        Click="btnEnviar_Click"
                        Foreground="White">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="#462ad8"/>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#28aeed"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Width="150" Height="40" CornerRadius="20" Background="{TemplateBinding Background}">
                                <ContentPresenter VerticalAlignment="Center" HorizontalAlignment="Center"/>
                            </Border>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>


            <!-- Área para mostrar la respuesta -->
            <DataGrid x:Name="dgRespuesta" 
                  AutoGenerateColumns="True"
                  Margin="20,225,20,10"
                  IsReadOnly="True"/>
        </Grid>
    </Border>
</UserControl>
